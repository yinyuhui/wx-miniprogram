/**app.wxss**/
@import "./iconfont.wxss";

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.h2 {
  font-size: 32rpx;
  font-weight: 500;
  align-self: flex-start;
  margin: 40rpx 0 20rpx;
}

.desc, .li {
  word-break: break-word;
  font-size: 28rpx;
  line-height: 2;
  align-self: flex-start;
  color: #353535;
}

.li {
  font-size: 26rpx;
  line-height: 2.4;
  color: #888888;
}
